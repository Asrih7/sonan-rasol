
[
  { "id": 1, "text": "أذكار الصباح والمساء" },
  { "id": 2, "text": "ما يقول إذا استيقَظ من منامه" },
  { "id": 3, "text": "ما يقول إذا لبِس ثوبه" },
  { "id": 4, "text": "كيفية لُبس الثوب" },
  { "id": 5, "text": "ما يقول إذا دخل الخلاء" },
  { "id": 6, "text": "ما يقول إذا خرج من الخلاء" },
  { "id": 7, "text": "الذكر قبل الوضوء" },
  { "id": 8, "text": "ما يقول إذا فرغ من وضوئه" },
  { "id": 9, "text": "ما يقال عند الخروج من المنزل" },
  { "id": 10, "text": "ما يقال عند الدخول إلى المنزل" },
  { "id": 11, "text": "ما يقول إذا خرج إلى الصلاة" },
  { "id": 12, "text": "ما يقول عند دخول المسجد" },
  { "id": 13, "text": "ما يقول عند الخروج من المسجد" },
  { "id": 14, "text": "أذكار الأذان" },
  { "id": 15, "text": "ما يقول الإمام" },
  { "id": 16, "text": "ما يقول بعد تكبيرة الإحرام" },
  { "id": 17, "text": "التعوُّذ بعد دعاء الاستفتاح" },
  { "id": 18, "text": "ما يقال في الركوع" },
  { "id": 19, "text": "ما يقول عند الاعتدال من الركوع" },
  { "id": 20, "text": "ما يقول في السجود" },
  { "id": 21, "text": "ما يقول بين السجدتين" },
  { "id": 22, "text": "ما يقول في القنوت" },
  { "id": 23, "text": "التشهد في الصلاة" },
  { "id": 24, "text": "الصلاة على النبي بعد التشهُّد" },
  { "id": 25, "text": "الدعاء إذا فرغ من التشهُّد" },
  { "id": 26, "text": "آخر ما يقال بين التشهُّد والتسليم" },
  { "id": 27, "text": "ما يقول بعد الانصراف من الصلاة" },
  { "id": 28, "text": "ما يقال بعد صلاة الوتر" },
  { "id": 29, "text": "دعاء صلاة الاستخارة" },
  { "id": 30, "text": "الدعاء عند رؤية هلال رمضان" },
  { "id": 31, "text": "ما يقول الصائم إذا سابَّه أحد" },
  { "id": 32, "text": "الدعاء عند إفطار الصائم" },
  { "id": 33, "text": "الدعاء إذا أفطر عند أهل بيت" },
  { "id": 34, "text": "الذكر قبل الطعام" },
  { "id": 35, "text": "الدعاء عند الفراغ من الطعام" },
  { "id": 36, "text": "دعاء الضيف لصاحب الطعام" },
  { "id": 37, "text": "الدعاء لمن أطعَمه أو سقاه" },
  { "id": 38, "text": "الدعاء لمن صنَع إليك معروفًا" },
  { "id": 39, "text": "الدعاء لمن قال: إني أحبك في الله" },
  { "id": 40, "text": "ما يقال في المجلس" },
  { "id": 41, "text": "كفارة المجلس" },
  { "id": 42, "text": "كيف يُلبي المُحرِم في الحج أو العمرة" },
  { "id": 43, "text": "التكبير إذا أتى الركن الأسود" },
  { "id": 44, "text": "الدعاء بين الركن اليماني والحجر الأسود" },
  { "id": 45, "text": "دعاء الوقوف على الصفا والمروة" },
  { "id": 46, "text": "الدعاء يوم عرفة" },
  { "id": 47, "text": "الذكر عند المشعر الحرام" },
  { "id": 48, "text": "التكبير عند رمْي الجِمار مع كل حَصاة" },
  { "id": 49, "text": "دعاء ركوب الدابة ونحوها" },
  { "id": 50, "text": "دعاء السفر" },
  { "id": 51, "text": "الدعاء عند سماع صِياح الدِّيك ونَهيق الحمار" },
  { "id": 52, "text": "الدعاء عند سماع نُباح الكلاب" },
  { "id": 53, "text": "دعاء لقاء العدو" },
  { "id": 54, "text": "ما يقول من خاف قومًا" },
  { "id": 55, "text": "دعاء الريح" },
  { "id": 56, "text": "الدعاء إذا نزَل المطر" },
  { "id": 57, "text": "وبعد انتهاء المطر يقول" },
  { "id": 58, "text": "الدعاء لطرْد الشيطان ووساوسه" },
  { "id": 59, "text": "ما يُعوَّذ به الأولاد" },
  { "id": 60, "text": "ما يقول مَن أحسَّ وجعًا في جسده" },
  { "id": 61, "text": "الدعاء عند زيارة المريض" },
  { "id": 62, "text": "دعاء العُطاس" },
  { "id": 63, "text": "تلقين المُحتضَر" },
  { "id": 64, "text": "دعاء مَن أُصيب بمصيبة" },
  { "id": 65, "text": "دعاء التعزية" },
  { "id": 66, "text": "دعاء قضاء الدَّين" },
  { "id": 67, "text": "الدعاء عند الغضب" },
  { "id": 68, "text": "دعاء الهم والحزن" },
  { "id": 69, "text": "دعاء الكَرب" }
